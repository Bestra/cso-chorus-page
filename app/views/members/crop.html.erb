<% content_for(:head) do %>
<script type="text/javascript" charset="utf-8">
$(function() {
  $('#cropbox').Jcrop({
    onChange: update_crop,
    onSelect: update_crop,
    setSelect: [0, 0, 500, 500],
    aspectRatio: 95 / 120
  });
});

function update_crop(coords) {
  var rx = 95/coords.w;
  var ry = 120/coords.h;
  $('#preview').css({
    width: Math.round(rx * <%= @member.photo_geometry(:large).width %>) + 'px',
    height: Math.round(ry * <%= @member.photo_geometry(:large).height %>) + 'px',
    marginLeft: '-' + Math.round(rx * coords.x) + 'px',
    marginTop: '-' + Math.round(ry * coords.y) + 'px'
  });
  var w1 =<%= @member.photo_geometry(:original).width %>;
  var w2 = <%= @member.photo_geometry(:large).width %>;
  var ratio = w1 / w2 ;
  console.log(w1,w2,ratio);
  $("#crop_x").val(Math.floor(coords.x * ratio));
  $("#crop_y").val(Math.floor(coords.y * ratio));
  $("#crop_w").val(Math.floor(coords.w * ratio));
  $("#crop_h").val(Math.floor(coords.h * ratio));
}
</script>
<% end %>

<%= image_tag @member.photo.url(:large), :id => "cropbox", :class => "jcrop" %>

<%= form_for @member do |f| %>
  <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
    <%= f.text_field attribute, :id => attribute %>
  <% end %>
  <p><%= f.submit "Crop" %></p>
<% end %>
<h4>Preview:</h4>
<div style="width:95px; height:120px; overflow:hidden">
  <%= image_tag @member.photo.url(:large), :id => "preview" %>
</div>

